  <div class="section is-medium">
      <div class="section has-text-centered title">
        <h1>Sign Up</h1>
      </div>
      <form class="signupForm">
        <div class="section">
          <label for="nameSign" class="is-size-4">Username</label>
          <input type="text" id="nameSign" class="input">
        </div>
        <div class="section">
          <label for="emailSign" class="is-size-4">Email</label>
          <input type="text" id="emailSign" class="input" placeholder="example@test.com">
        </div>
        <div class="section">
          <label for="passSign" class="is-size-4">Password</label>
          <input type="password" id="passSign" class="input">
        </div>
        <button type="submit" class="button is-fullwidth has-background-info has-text-white">Sign-up</button>
      </form>
      <div>
        <p>Already have an account? <a href="/login">Sign in here</a></p>
      </div>

<script src="./js/signup.js"></script>